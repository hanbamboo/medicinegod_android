<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/id_searchres_web_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:orientation="vertical"
        android:translationZ="3dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:background="@drawable/bg_homepage_card_title_blue"
            android:orientation="horizontal">

            <TextView
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:background="@drawable/bg_homepage_card_sign"
                android:gravity="center_vertical|center_horizontal"
                android:paddingTop="3dp"
                android:paddingBottom="5dp"
                android:text="未知"
                android:textColor="@color/m_grey_70"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/id_searchres_web_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:paddingStart="10dp"
                android:paddingTop="3dp"
                android:paddingEnd="5dp"
                android:paddingBottom="3dp"
                android:text="当圣诞节丰富的规范化"
                android:textColor="#FFFFFF"
                android:textFontWeight="700"
                android:textSize="16sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.daqin.medicinegod.CustomWidget.RoundImageView
                app:type="round"
                app:radius="8dp"
                android:id="@+id/id_searchres_web_img"
                android:layout_width="160dp"
                android:layout_height="90dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="2dp"
                android:layout_marginBottom="5dp"
                android:scaleType="fitXY" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/id_searchres_web_company"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginBottom="5dp"
                    android:text="生产公司:奥利给过过过过过过过过过过过"
                    android:textColor="@color/m_grey_70"
                    android:textFontWeight="500"
                    android:textSize="12dp" />
                <TextView
                    android:id="@+id/id_searchres_web_desp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginBottom="5dp"
                    android:text="药品描述:奥利给过过过过过过过过过过过"
                    android:textColor="@color/m_grey_70"
                    android:textFontWeight="300"
                    android:textSize="10dp" />

            </LinearLayout>


        </LinearLayout>


    </LinearLayout>

</LinearLayout>
