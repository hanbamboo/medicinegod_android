<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    >

    <LinearLayout
        android:id="@+id/id_import_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/id_import_title_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:background="@drawable/bg_homepage_card_title_green"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/id_import_group"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:layout_margin="2dp"
                android:background="@drawable/bg_homepage_card_sign"
                android:gravity="center_vertical|center_horizontal"
                android:text="组别"
                android:textColor="@color/m_grey_70"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/id_import_otc"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:background="@drawable/bg_homepage_card_sign"
                android:gravity="center_vertical|center_horizontal"
                android:paddingTop="3dp"
                android:paddingBottom="5dp"
                android:text="Rx"
                android:textColor="@color/m_normal"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/id_import_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:paddingStart="10dp"
                android:paddingTop="3dp"
                android:paddingEnd="5dp"
                android:paddingBottom="3dp"
                android:text="当圣诞节丰富的规范化"
                android:textColor="#FFFFFF"
                android:textFontWeight="700"
                android:textSize="16sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.daqin.medicinegod.CustomWidget.RoundImageView
                    android:id="@+id/id_import_image"
                    android:layout_width="160dp"
                    android:layout_height="90dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="2dp"
                    android:layout_marginBottom="5dp"
                    android:scaleType="fitXY"
                    android:src="@mipmap/add_imgdefault"
                    app:radius="8dp"
                    app:type="round" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/id_import_company"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="5dp"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="所产公司："
                        android:textColor="@color/m_normal"
                        android:textSize="12dp"
                        android:textStyle="italic|bold" />

                    <TextView
                        android:id="@+id/id_import_outdate"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="5dp"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="【正常使用】请遵医嘱、说明书使用。"
                        android:textColor="@color/m_normal"
                        android:textSize="12dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/id_import_usage"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="5dp"
                        android:ellipsize="end"
                        android:marqueeRepeatLimit="marquee_forever"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:text="1次 - 1包 - 1天"
                        android:textSize="12dp" />

                    <TextView
                        android:id="@+id/id_import_usage1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="5dp"
                        android:ellipsize="end"
                        android:maxLines="3"
                        android:paddingStart="5dp"
                        android:paddingEnd="5dp"
                        android:text="用法用量"
                        android:textSize="14dp"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/id_import_yu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:ellipsize="end"
                        android:marqueeRepeatLimit="marquee_forever"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:text="剩余1011121包"
                        android:textSize="10dp" />

                    <TextView
                        android:id="@+id/id_import_barcode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:ellipsize="end"
                        android:marqueeRepeatLimit="marquee_forever"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:text="条码：123456789"
                        android:textSize="10dp" />

                </LinearLayout>
            </LinearLayout>


            <com.daqin.medicinegod.CustomWidget.FlowLayout
                android:id="@+id/id_import_elabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="2dp" />

            <TextView
                android:id="@+id/id_import_desp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:paddingBottom="5dp"
                android:text="详情描述："
                android:textColor="@color/m_grey_70"
                android:textFontWeight="500"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/id_import_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="5dp"
                android:paddingBottom="5dp"
                android:text="成功：【药品名】导入前置工作已就绪。"
                android:textColor="@color/m_blue"
                android:textFontWeight="700"
                android:textSize="12sp" />
        </LinearLayout>


    </LinearLayout>

</LinearLayout>
