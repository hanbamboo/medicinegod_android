<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/bg_homepage_card_title_white"
        android:orientation="vertical"
        android:padding="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:gravity="start|center_vertical"
                android:orientation="horizontal">

                <com.daqin.medicinegod.CustomWidget.RoundImageView
                    android:id="@+id/id_collage_b_list_head"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="2dp"
                    android:layout_marginBottom="5dp"
                    android:scaleType="fitXY"
                    android:src="@mipmap/add_imgdefault"
                    app:radius="50dp"
                    app:type="round" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="start|center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/id_collage_b_list_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="5dp"
                        android:layout_marginBottom="2dp"
                        android:ellipsize="end"
                        android:marqueeRepeatLimit="marquee_forever"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:text="用户名用户名用户名用户名用户名"
                        android:textColor="@color/black"
                        android:textFontWeight="500"
                        android:textSize="12dp" />

                    <TextView
                        android:id="@+id/id_collage_b_list_mystyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="5dp"
                        android:ellipsize="end"
                        android:marqueeRepeatLimit="marquee_forever"
                        android:maxLines="1"
                        android:paddingTop="2dp"
                        android:singleLine="true"
                        android:text="签名签名签名签名签名签名签名"
                        android:textColor="@color/m_grey_50"
                        android:textFontWeight="300"
                        android:textSize="10dp" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="end|center_vertical"
                android:orientation="horizontal"
                android:paddingStart="0dp"
                android:paddingEnd="15dp">

                <TextView
                    android:id="@+id/id_collage_b_list_method"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_collage_status_green"
                    android:paddingStart="10dp"
                    android:paddingTop="5dp"
                    android:paddingEnd="10dp"
                    android:paddingBottom="5dp"
                    android:text="闲置出借"
                    android:textAlignment="center"
                    android:textColor="@color/m_normal_70"
                    android:textFontWeight="700"
                    android:textSize="12dp" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/id_collage_b_list_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:paddingStart="10dp"
            android:paddingTop="5dp"
            android:paddingEnd="10dp"
            android:text="这是一段很长的标题这是一段很长的标题这是一段很长的标题"
            android:textAlignment="textStart"
            android:textColor="@color/black"
            android:textFontWeight="700"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/id_collage_b_list_context"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="3"
            android:padding="10dp"
            android:text="   测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试"
            android:textAlignment="textStart"
            android:textColor="@color/m_grey_90"
            android:textFontWeight="500"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal|center_vertical"
            android:orientation="horizontal">

            <com.daqin.medicinegod.CustomWidget.RoundImageView
                android:id="@+id/id_collage_b_list_img"
                android:layout_width="320dp"
                android:layout_height="180dp"
                android:layout_margin="5dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/add_imgdefault"
                android:visibility="gone"
                app:radius="10dp"
                app:type="round" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="10dp"
            android:gravity="start|center_vertical">

            <ImageButton
                android:id="@+id/id_collage_b_list_dellist"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:background="@color/m_transparent"
                android:contentDescription="删除"
                android:elevation="2dp"
                android:src="@drawable/ic_delete_red"
                android:focusable="false"
            android:visibility="gone" />



            <ImageButton
                android:id="@+id/id_collage_b_list_share"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:background="@color/m_transparent"
                android:contentDescription="分享"
                android:focusable="false"
                android:elevation="2dp"
                android:src="@drawable/ic_detail_share_24dp" />

            <ImageButton
                android:id="@+id/id_collage_b_list_ping"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="10dp"
                android:background="@color/m_transparent"
                android:contentDescription="评论"
                android:elevation="2dp"
                android:focusable="false"
                android:src="@drawable/ic_ping" />

            <TextView
                android:id="@+id/id_collage_b_list_ping_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textAlignment="viewEnd"
                android:textColor="@color/m_grey_70"
                android:textFontWeight="300"
                android:textSize="12dp" />

            <ImageButton
                android:id="@+id/id_collage_b_list_zan"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="10dp"
                android:background="@color/m_transparent"
                android:contentDescription="点赞"
                android:elevation="2dp"
                android:focusable="false"
                android:src="@drawable/ic_zan_default" />

            <TextView
                android:id="@+id/id_collage_b_list_zan_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textAlignment="viewEnd"
                android:textColor="@color/m_grey_70"
                android:textFontWeight="300"
                android:textSize="12dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/id_collage_b_list_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="3dp"
            android:text="2020年20月20日13时20分13秒"
            android:textAlignment="viewEnd"
            android:textColor="@color/m_grey_70"
            android:textFontWeight="300"
            android:textSize="12dp" />

    </LinearLayout>

</LinearLayout>
