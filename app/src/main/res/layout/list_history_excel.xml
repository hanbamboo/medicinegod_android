<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/id_his_time"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:ellipsize="end"
            android:gravity="center_vertical|start"
            android:marqueeRepeatLimit="marquee_forever"
            android:maxLines="1"
            android:singleLine="true"
            android:text="时间显示"
            android:textColor="@color/m_grey_70"
            android:textFontWeight="500"
            android:textSize="12dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|top"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/id_his_flag"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="2dp"
                android:background="@drawable/bg_collage_status_blue"
                android:gravity="center"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:text="模板"
                android:textColor="@color/m_blue_80"
                android:textFontWeight="300"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/id_his_title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="5dp"
                android:gravity="center_vertical|start"
                android:text="随便几个标题名字"
                android:textFontWeight="700"
                android:textSize="14dp" />

        </LinearLayout>

        <TextView
            android:id="@+id/id_his_path"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:marqueeRepeatLimit="marquee_forever"
            android:maxLines="1"
            android:singleLine="true"
            android:text="文件路径"
            android:textColor="@color/m_grey_70"
            android:textFontWeight="500"
            android:textSize="10dp" />

    </LinearLayout>

</LinearLayout>
