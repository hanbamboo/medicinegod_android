<?xml version="1.0" encoding="utf-8"?>
<com.daqin.medicinegod.CustomWidget.AutoSwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/id_intel_swipelayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/m_grey_background_50"
    android:padding="5dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/id_intel_tips"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="15dp"
                android:text="下午好，来杯下午茶吧。"
                android:textColor="@color/m_grey_90"
                android:textFontWeight="700"
                android:textSize="22sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/bg_homepage_card_title_white"
                android:elevation="5dp"
                android:gravity="start|center_vertical"
                android:orientation="horizontal"
                android:paddingTop="10dp"
                android:paddingBottom="10dp">

                <com.daqin.medicinegod.CustomWidget.RoundImageView
                    android:id="@+id/id_intel_headimg"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:elevation="2dp"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/me_man_default"
                    app:type="circle" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="10dp"
                    android:gravity="start|center_vertical"
                    android:orientation="vertical"
                    android:paddingStart="10dp"
                    android:paddingEnd="5dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/id_intel_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:maxWidth="140dp"
                            android:maxLines="1"
                            android:text="用户未登录用户未登录用户未登录用户未登录"
                            android:textColor="@color/m_grey_90"
                            android:textFontWeight="700"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/id_intel_vip"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:layout_marginEnd="5dp"
                            android:background="@drawable/bg_homepage_card_title_blue_border"
                            android:paddingStart="10dp"
                            android:paddingTop="2dp"
                            android:paddingEnd="10dp"
                            android:paddingBottom="2dp"
                            android:text="非会员"
                            android:textColor="@color/m_blue_80"
                            android:textFontWeight="700"
                            android:textSize="8sp" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/id_intel_say"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="你很有个性嘛~"
                        android:textColor="@color/m_grey_50"
                        android:textFontWeight="500"
                        android:textSize="10sp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">


                        <com.google.android.material.progressindicator.LinearProgressIndicator
                            android:id="@+id/id_intel_progress"
                            android:layout_width="80dp"
                            android:layout_height="match_parent"
                            android:max="100"
                            android:min="0"
                            android:progress="0" />

                        <TextView
                            android:id="@+id/id_intel_progress_title"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:paddingStart="5dp"
                            android:paddingEnd="5dp"
                            android:text="0/0"
                            android:textColor="@color/m_grey_50"
                            android:textFontWeight="300"
                            android:textSize="8sp" />

                    </LinearLayout>

                </LinearLayout>


                <RelativeLayout
                    android:id="@+id/id_intel_relative"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="15dp"
                    android:gravity="end|center_vertical"
                    android:minWidth="50dp"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/id_intel_notice"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@color/m_transparent"
                        android:contentDescription="消息提醒"
                        android:src="@drawable/ic_notice" />

                    <TextView
                        android:id="@+id/id_intel_notice_count"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignTop="@id/id_intel_notice"
                        android:layout_alignEnd="@id/id_intel_notice"
                        android:background="@drawable/bg_notice_crirle"
                        android:gravity="center_vertical|center_horizontal"
                        android:text="0"
                        android:textColor="@color/white"
                        android:textFontWeight="700"
                        android:textSize="10sp"
                        android:textStyle="bold" />
                </RelativeLayout>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/bg_homepage_card_title_white"
                android:elevation="5dp"
                android:gravity="start|center_vertical"
                android:orientation="horizontal"
                android:paddingTop="5dp"
                android:paddingBottom="5dp">


                <com.youth.banner.Banner
                    android:id="@+id/id_intel_banner"
                    android:layout_width="match_parent"
                    android:layout_height="170dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="5dp"
                    android:clickable="true"
                    app:banner_radius="10dp"
                    tools:ignore="MissingConstraints" />


            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:text="持有药品一览"
                android:textColor="@color/m_grey_90"
                android:textFontWeight="700"
                android:textSize="22sp"
                android:textStyle="bold" />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none"
                tools:ignore="ScrollViewCount">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:gravity="center_horizontal|center_vertical"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginEnd="5dp"
                        android:layout_marginBottom="5dp"
                        android:background="@drawable/bg_homepage_card_title_white"
                        android:elevation="5dp"
                        android:gravity="start|center_vertical"
                        android:orientation="horizontal"
                        android:padding="5dp">

                        <LinearLayout
                            android:layout_width="250dp"
                            android:layout_height="120dp"
                            android:background="@drawable/bg_homepage_card_title_green_nohalf"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/id_intel_explor_green_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="15dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginEnd="10dp"
                                android:layout_marginBottom="5dp"
                                android:text="正常使用药品(0)"
                                android:textColor="@color/white"
                                android:textFontWeight="700"
                                android:textSize="18sp" />

                            <ScrollView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:paddingBottom="2dp"
                                android:scrollbars="none">

                                <LinearLayout
                                    android:id="@+id/id_intel_explor_green_layout"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">


                                </LinearLayout>
                            </ScrollView>


                        </LinearLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginEnd="5dp"
                        android:layout_marginBottom="5dp"
                        android:background="@drawable/bg_homepage_card_title_white"
                        android:elevation="5dp"
                        android:gravity="start|center_vertical"
                        android:orientation="horizontal"
                        android:padding="5dp">

                        <LinearLayout
                            android:layout_width="250dp"
                            android:layout_height="120dp"
                            android:background="@drawable/bg_homepage_card_title_orange_nohalf"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/id_intel_explor_orange_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="15dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginEnd="10dp"
                                android:layout_marginBottom="5dp"
                                android:text="即将过期药品(0)"
                                android:textColor="@color/white"
                                android:textFontWeight="700"
                                android:textSize="18sp" />

                            <ScrollView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:paddingBottom="2dp"
                                android:scrollbars="none">

                                <LinearLayout
                                    android:id="@+id/id_intel_explor_orange_layout"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">


                                </LinearLayout>
                            </ScrollView>

                        </LinearLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="5dp"
                        android:background="@drawable/bg_homepage_card_title_white"
                        android:elevation="5dp"
                        android:gravity="start|center_vertical"
                        android:orientation="horizontal"
                        android:padding="5dp">

                        <LinearLayout
                            android:layout_width="250dp"
                            android:layout_height="120dp"
                            android:background="@drawable/bg_homepage_card_title_red_nohalf"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/id_intel_explor_red_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="15dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginEnd="10dp"
                                android:layout_marginBottom="5dp"
                                android:text="已经过期药品(0)"
                                android:textColor="@color/white"
                                android:textFontWeight="700"
                                android:textSize="18sp" />

                            <ScrollView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:paddingBottom="2dp"
                                android:scrollbars="none">

                                <LinearLayout
                                    android:id="@+id/id_intel_explor_red_layout"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">


                                </LinearLayout>
                            </ScrollView>

                        </LinearLayout>


                    </LinearLayout>

                </LinearLayout>

            </HorizontalScrollView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:text="部分标签一览"
                android:textColor="@color/m_grey_90"
                android:textFontWeight="700"
                android:textSize="22sp"
                android:textStyle="bold" />

            <com.daqin.medicinegod.CustomWidget.FlowLayout
                android:id="@+id/id_intel_elabel_all"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:padding="5dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/bg_homepage_card_title_white"
                android:elevation="3dp"
                android:gravity="start|center_vertical"
                android:orientation="vertical"
                android:paddingTop="5dp"
                android:paddingBottom="5dp" />

        </LinearLayout>
    </ScrollView>



</com.daqin.medicinegod.CustomWidget.AutoSwipeRefreshLayout>

