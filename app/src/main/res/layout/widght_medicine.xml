<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_widght"
    android:orientation="vertical"
    android:paddingStart="2dp"
    android:paddingEnd="2dp"
    android:paddingBottom="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="2dp"
        android:gravity="start"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="5dp"
            android:text="药神 - 给你的空闲药品一个家"
            android:textAlignment="textStart"
            android:textColor="@color/m_grey_90"
            android:textFontWeight="700"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical|center_horizontal"
            android:gravity="end"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/widght_fresh"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:background="@color/m_transparent"
                android:contentDescription="刷新组件"
                android:paddingStart="2dp"
                android:paddingTop="2dp"
                android:scaleType="center"
                android:src="@drawable/ic_refresh_black_24dp" />
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"


        android:gravity="top|center_horizontal"
        android:orientation="horizontal"
        android:padding="5dp">

        <LinearLayout
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:background="@drawable/bg_homepage_card_title_blue_nohalf"
            android:elevation="5dp"
            android:gravity="center_horizontal|center_vertical"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="已有存档"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textFontWeight="500"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/widght_all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_widght"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:text="0"
                android:textAlignment="center"
                android:textColor="@color/m_blue_80"
                android:textFontWeight="700"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:background="@drawable/bg_homepage_card_title_green_nohalf"
            android:elevation="5dp"
            android:gravity="center_horizontal|center_vertical"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="保质期内"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textFontWeight="500"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/widght_green"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_widght"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:text="0"
                android:textAlignment="center"
                android:textColor="@color/m_normal"
                android:textFontWeight="700"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:background="@drawable/bg_homepage_card_title_orange_nohalf"

            android:elevation="5dp"
            android:gravity="center_horizontal|center_vertical"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="临期药品"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textFontWeight="500"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/widght_orange"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_widght"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:text="0"
                android:textAlignment="center"
                android:textColor="@color/m_near"
                android:textFontWeight="700"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"

            android:background="@drawable/bg_homepage_card_title_red_nohalf"
            android:elevation="5dp"
            android:gravity="center_horizontal|center_vertical"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="药品过期"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textFontWeight="500"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/widght_red"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_widght"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:text="0"
                android:textAlignment="center"
                android:textColor="@color/m_out"
                android:textFontWeight="700"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
